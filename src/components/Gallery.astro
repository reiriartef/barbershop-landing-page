<section
  id="gallery"
  class="relative w-full px-6 py-16 mx-auto text-white font-sans"
>
  <!-- Header -->
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold uppercase">Galería</h2>

    <!-- Línea con tijera -->
    <div class="relative my-8 h-8 flex items-center justify-center">
      <div class="w-full h-px bg-gray-600"></div>
      <div class="absolute px-2 bg-black text-gray-300 text-xl">✂️</div>
    </div>
  </div>

  <!-- Carousel -->
  <div class="relative overflow-hidden">
    <div id="carousel" class="flex transition-transform duration-500">
      <!-- Imagen 1 -->
      <div class="min-w-[33.33%] p-2 group relative">
        <img
          src="/assets/gallery-1.jpg"
          alt="Galería 1"
          class="rounded-lg shadow-lg object-cover w-full h-64"
        />
        <!-- Previsualización -->
        <div
          class="absolute inset-0 bg-black/70 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
          <img
            src="/assets/gallery-1.jpg"
            alt="Galería 1"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
      </div>
      <!-- Imagen 2 -->
      <div class="min-w-[33.33%] p-2 group relative">
        <img
          src="/assets/gallery-2.jpg"
          alt="Galería 2"
          class="rounded-lg shadow-lg object-cover w-full h-64"
        />
        <!-- Previsualización -->
        <div
          class="absolute inset-0 bg-black/70 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
          <img
            src="/assets/gallery-2.jpg"
            alt="Galería 2"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
      </div>
      <!-- Imagen 3 -->
      <div class="min-w-[33.33%] p-2 group relative">
        <img
          src="/assets/gallery-3.jpg"
