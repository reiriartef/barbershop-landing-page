// No se requiere lógica adicional por ahora
---

<section
  id="barbers"
  class="relative w-full px-6 py-16 mx-auto text-white font-sans"
>
  <!-- Header -->
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold uppercase">Nuestros Barberos</h2>

    <!-- Línea con tijera -->
    <div class="relative my-8 h-8 flex items-center justify-center">
      <div class="w-full h-px bg-gray-600"></div>
      <div class="absolute px-2 bg-black text-gray-300 text-xl">✂️</div>
    </div>
  </div>

  <!-- Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Card 1: FeriaBarber -->
    <div class="glass-card p-6 rounded-lg shadow-lg">
      <img
        src="/assets/feria-barber.jpg"
        alt="FeriaBarber"
        class="rounded-lg w-full max-h-64 mb-4 object-cover object-top"
      />
      <h3 class="text-2xl font-bold mb-4">José Feria - FeriaBarber</h3>
      <p class="text-gray-300 mb-4">
        Especialista en cortes modernos y degradados. Con más de 2 años de
        experiencia, FeriaBarber es conocido por su atención al detalle y
        creatividad.
      </p>
      <ul class="text-gray-300 mb-4 space-y-2">
        <li>
          <div class="flex justify-between">
            <span>Especialidad:</span>
            <span class="text-red-500">Degradados</span>
          </div>
          <div class="w-full h-px bg-gray-600 my-2"></div>
        </li>
        <li>
          <div class="flex justify-between">
            <span>Experiencia:</span>
            <span class="text-red-500">2 años</span>
          </div>
        </li>
      </ul>
    </div>

    <!-- Card 2: AlanBarber -->
    <div class="glass-card p-6 rounded-lg shadow-lg">
      <img
        src="/assets/alan-barber.jpeg"
        alt="AlanBarber"
        class="rounded-lg w-full max-h-64 mb-4 object-cover object-top"
      />
      <h3 class="text-2xl font-bold mb-4">Alan Ferrer - AlanBarber</h3>
      <p class="text-gray-300 mb-4">
        Maestro en afeitados clásicos y cortes tradicionales. AlanBarber se
        destaca por su trato amable y profesionalismo.
      </p>
      <ul class="text-gray-300 mb-4 space-y-2">
        <li>
          <div class="flex justify-between">
            <span>Especialidad:</span>
            <span class="text-red-500">Afeitado Clásico</span>
          </div>
          <div class="w-full h-px bg-gray-600 my-2"></div>
        </li>
        <li>
          <div class="flex justify-between">
            <span>Experiencia:</span>
            <span class="text-red-500">8 años</span>
          </div>
        </li>
      </ul>
    </div>
  </div>
</section>

<style>
  * {
    font-family: 'PT Sans', sans-serif;
  }

  p,
  ul {
    font-family: 'PT Sans', sans-serif;
    font-size: 18px;
    text-align: justify;
  }

  .glass-card {
    background: rgba(0, 0, 0, 0.6); /* Fondo negro semitransparente */
    backdrop-filter: blur(10px); /* Efecto de desenfoque */
    border: 1px solid rgba(255, 255, 255, 0.2); /* Borde translúcido */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Sombra */
  }

  .glass-card:hover {
    background: rgba(0, 0, 0, 0.8); /* Fondo más oscuro al pasar el mouse */
    transform: scale(1.05); /* Efecto de zoom */
    transition: all 0.3s ease-in-out;
  }

  img {
    max-height: 50rem; /* Limita la altura máxima de las imágenes */
  }
</style>
